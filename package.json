{
  "name": "playwright-automation",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:dev",
    "test:cucumber": "cucumber-js --config cucumber.config.js",
    "test:cucumber:html": "cucumber-js --config cucumber.config.js --format html:reports/cucumber-report.html",
    "test:cucumber:headless": "HEADLESS=true cucumber-js --config cucumber.config.js",
    "test:cucumber:parallel": "CUCUMBER_WORKERS=4 cucumber-js --config cucumber.config.js --profile parallel",
    "test:cucumber:parallel:fast": "CUCUMBER_WORKERS=6 cucumber-js --config cucumber.config.js --profile parallel",
    "test:cucumber:parallel:ci": "CUCUMBER_WORKERS=2 HEADLESS=true cucumber-js --config cucumber.config.js --profile parallel",
    "test:parallel": "npm run test:cucumber:parallel",
    "test:parallel:fast": "npm run test:cucumber:parallel:fast",
    "test:ci": "npm run test:cucumber:parallel:ci",
    "test:sequential": "CUCUMBER_WORKERS=1 cucumber-js --config cucumber.config.js",
    "test:dev": "node src/config/environment-loader.js dev && npm run test:cucumber:html",
    "test:dev:parallel": "node src/config/environment-loader.js dev && npm run test:cucumber:parallel",
    "test:dev:fast": "node src/config/environment-loader.js dev && npm run test:cucumber:parallel:fast",
    "test:staging": "node src/config/environment-loader.js staging && npm run test:cucumber:parallel",
    "test:prod": "node src/config/environment-loader.js prod && npm run test:cucumber:parallel:ci",
    "test:staging:fast": "node src/config/environment-loader.js staging && npm run test:cucumber:parallel:fast",
    "env:info": "node src/config/environment-loader.js --help",
    "env:dev": "node src/config/environment-loader.js dev",
    "env:staging": "node src/config/environment-loader.js staging",
    "env:prod": "node src/config/environment-loader.js prod",
    "retry:failed": "./scripts/retry-failed-tests.sh",
    "retry:dev": "./scripts/retry-failed-tests.sh -e dev",
    "retry:staging": "./scripts/retry-failed-tests.sh -e staging",
    "retry:prod": "./scripts/retry-failed-tests.sh -e prod",
    "retry:stats": "./scripts/retry-failed-tests.sh --stats",
    "retry:clear": "./scripts/retry-failed-tests.sh --clear",
    "retry:demo": "npx ts-node src/utils/TestRetryDemo.ts",
    "test:azure": "cucumber-js --config cucumber.azure.config.js",
    "test:azure:parallel": "cucumber-js --config cucumber.azure.config.js --profile azure",
    "build": "echo 'No build step required for test automation project'",
    "deploy": "echo 'Configure deployment target in GitHub Actions'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "@cucumber/pretty-formatter": "^2.1.0",
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.3.0",
    "cucumber-html-reporter": "^7.2.0",
    "playwright": "^1.55.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@azure/msal-node": "^3.7.3",
    "npx": "^10.2.2"
  }
}
