{
  "environment": {
    "name": "production",
    "description": "Production environment for live testing"
  },
  "application": {
    "baseUrl": "https://github.com",
    "searchUrl": "https://gh-users-search.netlify.app",
    "apiUrl": "https://api.github.com"
  },
  "browser": {
    "headless": true,
    "slowMo": 0,
    "timeout": 30000,
    "viewport": {
      "width": 1280,
      "height": 720
    }
  },
  "test": {
    "timeout": 60000,
    "retries": 3,
    "workers": 4,
    "reporter": "html",
    "retryDelay": 5000,
    "retryOnlyFailures": true,
    "retryTimeoutMultiplier": 2.5,
    "failFast": true
  },
  "logging": {
    "level": "warn",
    "enableScreenshots": false,
    "enableVideo": false,
    "enableTrace": false
  },
  "users": {
    "defaultUser": "torvalds",
    "testUsers": ["torvalds", "nadvolod", "microsoft"]
  }
}
