{
  "environment": {
    "name": "staging",
    "description": "Staging environment for pre-production testing"
  },
  "application": {
    "baseUrl": "https://github.com",
    "searchUrl": "https://gh-users-search.netlify.app",
    "apiUrl": "https://api.github.com"
  },
  "browser": {
    "headless": true,
    "slowMo": 100,
    "timeout": 30000,
    "viewport": {
      "width": 1280,
      "height": 720
    }
  },
  "test": {
    "timeout": 60000,
    "retries": 1,
    "workers": 2,
    "reporter": "html"
  },
  "logging": {
    "level": "info",
    "enableScreenshots": true,
    "enableVideo": false,
    "enableTrace": false
  },
  "users": {
    "defaultUser": "torvalds",
    "testUsers": ["torvalds", "nadvolod", "microsoft", "facebook", "google"]
  }
}
